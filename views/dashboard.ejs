<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs', { title: 'Dashboard' }) %>
<body class="h-screen overflow-hidden bg-gray-100">
    <!-- Include Sidebar -->
    <%- include('./partials/sidebar.ejs') %>

    <!-- Include Header -->
    <%- include('./partials/header.ejs') %>

    <!-- Flash Messages -->
    <%- include('./partials/flashMessages.ejs') %>

    <!-- Main Content -->
    <div class="ml-64 mt-20 p-6 w-[calc(100%-16rem)] h-screen overflow-auto">
        <h1 class="text-2xl font-bold mb-4">Dashboard</h1>

        <!-- Dashboard-specific content with cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            
            <!-- Customers Card -->
            <div class="bg-white shadow-lg p-4 border-l-4 border-blue-500">
                <div class="flex justify-between items-start">
                    <div class="text-left">
                        <p class="text-gray-500 text-sm">Customers</p>
                        <p class="text-black text-3xl font-bold"><%= customers %></p>
                    </div>
                    <div class="text-blue-500">
                        <!-- Icon representing customers -->
                        <i class="fas fa-users text-3xl"></i>
                    </div>
                </div>
                <div class="mt-4">
                    <% if (customerGrowth >= 0) { %>
                        <p class="text-green-500 text-sm">+<%= customerGrowth %>% from last week</p>
                    <% } else { %>
                        <p class="text-red-500 text-sm"><%= customerGrowth %>% from last week</p>
                    <% } %>
                </div>
            </div>

            <!-- Sales Card -->
            <div class="bg-white shadow-lg p-4 border-l-4 border-green-500">
                <div class="flex justify-between items-start">
                    <div class="text-left">
                        <p class="text-gray-500 text-sm">Sales</p>
                        <p class="text-black text-3xl font-bold"><%= sales %></p>
                    </div>
                    <div class="text-green-500">
                        <!-- Icon representing sales -->
                        <p class="text-3xl" >MWK</i>
                    </div>
                </div>
                <div class="mt-4">
                    <% if (salesGrowth >= 0) { %>
                        <p class="text-green-500 text-sm">+<%= salesGrowth %>% from last week</p>
                    <% } else { %>
                        <p class="text-red-500 text-sm"><%= salesGrowth %>% from last week</p>
                    <% } %>
                </div>
            </div>

           

            <!-- Products Card -->
            <div class="bg-white shadow-lg p-4 border-l-4 border-red-500">
                <div class="flex justify-between items-start">
                    <div class="text-left">
                        <p class="text-gray-500 text-sm">Products</p>
                        <p class="text-black text-3xl font-bold"><%= products %></p>
                    </div>
                    <div class="text-red-500">
                        <!-- Icon representing products -->
                        <i class="fas fa-box text-3xl"></i>
                    </div>
                </div>
                <div class="mt-4">
                    <% if (productGrowth >= 0) { %>
                        <p class="text-green-500 text-sm">+<%= productGrowth %>% from last week</p>
                    <% } else { %>
                        <p class="text-red-500 text-sm"><%= productGrowth %>% from last week</p>
                    <% } %>
                </div>
            </div>

            <!-- Payments Card -->
            <div class="bg-white shadow-lg p-4 border-l-4 border-purple-500">
                <div class="flex justify-between items-start">
                    <div class="text-left">
                        <p class="text-gray-500 text-sm">Payments</p>
                        <p class="text-black text-3xl font-bold"><%= payments %></p>
                    </div>
                    <div class="text-purple-500">
                        <!-- Icon representing payments -->
                        <i class="fas fa-credit-card text-3xl"></i>
                    </div>
                </div>
                <div class="mt-4">
                    <% if (paymentsGrowth >= 0) { %>
                        <p class="text-green-500 text-sm">+<%= paymentsGrowth %>% from last week</p>
                    <% } else { %>
                        <p class="text-red-500 text-sm"><%= paymentsGrowth %>% from last week</p>
                    <% } %>
                </div>
            </div>
        </div>

         <!-- Recent Sales Table -->
         <div class="mt-10">
            <div class="bg-white shadow-lg p-4">
                <h2 class="text-xl font-bold mb-4">Recent Sales</h2>
                <div class="overflow-x-auto">
                    <table class="min-w-full bg-white">
                        <thead>
                            <tr>
                                <th class="py-4 px-4 border-b-2 border-gray-300 text-left text-gray-600 text-sm">Customer ID</th>
                                <th class="py-4 px-4 border-b-2 border-gray-300 text-left text-gray-600 text-sm">Customer Name</th>
                                <th class="py-4 px-4 border-b-2 border-gray-300 text-left text-gray-600 text-sm">Employment Number</th>
                                <th class="py-4 px-4 border-b-2 border-gray-300 text-left text-gray-600 text-sm">Product Name</th>
                                <th class="py-4 px-4 border-b-2 border-gray-300 text-left text-gray-600 text-sm">Quantity</th>
                                <th class="py-4 px-4 border-b-2 border-gray-300 text-left text-gray-600 text-sm">Order Date</th>
                                <th class="py-4 px-4 border-b-2 border-gray-300 text-left text-gray-600 text-sm">Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% recentSales.forEach(sale => { %>
                                <tr>
                                    <td class="py-4 px-4 border-b border-gray-300"><%= sale.customer_id %></td>
                                    <td class="py-4 px-4 border-b border-gray-300"><%= sale.customer_name %></td>
                                    <td class="py-4 px-4 border-b border-gray-300"><%= sale.employment_number %></td>
                                    <td class="py-4 px-4 border-b border-gray-300"><%= sale.product_name %></td>
                                    <td class="py-4 px-4 border-b border-gray-300"><%= sale.quantity %></td>
                                    <td class="py-4 px-4 border-b border-gray-300"><%= sale.sale_date %></td>
                                    <td class="py-4 px-4 border-b border-gray-300"><%= sale.price %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>

    <script src="/js/flashMessages.js"></script>
     <script src="/js/dashboard.js"></script>
</body>
</html>
