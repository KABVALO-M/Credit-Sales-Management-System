<!-- views/partials/flashMessages.ejs -->
<div id="flashMessages" class="fixed top-5 left-1/2 transform -translate-x-1/2 max-w-full w-full z-50">
    <!-- Success Message -->
    <% if (successMessage.length > 0) { %>
      <div class="bg-green-100 border border-green-400 text-green-700 text-center px-4 py-3 rounded-lg mb-4 w-full xl:max-w-5xl mx-auto fade-out" role="alert">
        <%= successMessage %>
      </div>
    <% } %>
    <!-- Error Message -->
    <% if (errorMessage.length > 0) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 text-center py-3 rounded-lg mb-4 w-full xl:max-w-5xl mx-auto fade-out" role="alert">
        <%= errorMessage %>
      </div>
    <% } %>
  </div>
  