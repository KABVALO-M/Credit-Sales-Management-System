    <!-- Logout Section -->
    <div class="mt-auto mb-6">
        <ul>
            <!-- Logout Menu Item -->
            <li class="w-full">
                <a href="/auth/logout" class="w-full p-4 flex items-center space-x-4 text-gray-300 
                    <% if (currentPage === 'logout') { %> 
                        bg-white bg-opacity-20 text-white 
                    <% } %> 
                    hover:bg-white hover:bg-opacity-20 hover:text-white rounded transition-all ease-in-out duration-200">
                    <i class="fa-thin fa-right-from-bracket text-2xl"></i><!-- Icon -->
                    <span class="text-lg">Logout</span> <!-- Menu Name -->
                </a>
            </li>
        </ul>
    </div>
</aside>
