<aside class="fixed top-0 left-0 w-64 h-full bg-gray-800 text-white shadow-md flex flex-col">
    <!-- Sidebar Title Section -->
    <div class="p-6 h-20 border-b border-gray-700 flex items-center">
        <!-- Rounded Profile Image -->
        <img 
            src="/img/logo.jpeg" 
            alt="Profile Image" 
            class="w-14 h-14 rounded-full mr-4"
        />
        <!-- User's Name -->
        <div>
            <h2 class="text-xl font-semibold">CSMS</h2>
        </div>
    </div>

    <!-- Sidebar Links -->
    <div class="flex-1 mt-6">
        <!-- Main Menu Section -->
        <div class="mb-4">
            <h3 class="text-gray-400 text-base uppercase px-4 mb-2">Main Menu</h3>
            <ul>
                <!-- Dashboard Menu Item -->
                <li class="w-full mb-2">
                    <a href="/" class="w-full p-4 flex items-center space-x-4 text-gray-300 
                        <% if (currentPage === 'dashboard') { %> 
                            bg-white bg-opacity-20 text-white 
                        <% } %> 
                        hover:bg-white hover:bg-opacity-20 hover:text-white rounded transition-all ease-in-out duration-200">
                        <i class="fa-thin fa-gauge-max text-2xl"></i> <!-- Icon -->
                        <span class="text-lg">Dashboard</span> <!-- Menu Name -->
                    </a>
                </li>

                <!-- Customers Menu Item -->
                <li class="w-full mb-2">
                    <a href="/customers" class="w-full p-4 flex items-center space-x-4 text-gray-300 
                        <% if (currentPage === 'customers') { %> 
                            bg-white bg-opacity-20 text-white 
                        <% } %> 
                        hover:bg-white hover:bg-opacity-20 hover:text-white rounded transition-all ease-in-out duration-200">
                        <i class="fa-thin fa-users text-2xl"></i> <!-- Icon -->
                        <span class="text-lg">Customers</span> <!-- Menu Name -->
                    </a>
                </li>

                <!-- Products Menu Item -->
                <li class="w-full mb-2">
                    <a href="/products" class="w-full p-4 flex items-center space-x-4 text-gray-300 
                        <% if (currentPage === 'products') { %> 
                            bg-white bg-opacity-20 text-white 
                        <% } %> 
                        hover:bg-white hover:bg-opacity-20 hover:text-white rounded transition-all ease-in-out duration-200">
                        <i class="fa-thin fa-box text-2xl"></i> <!-- Icon -->
                        <span class="text-lg">Products</span> <!-- Menu Name -->
                    </a>
                </li>

                <!-- Credit Agreements Menu Item -->
                <li class="w-full mb-2">
                    <a href="/agreements" class="w-full p-4 flex items-center space-x-4 text-gray-300 
                        <% if (currentPage === 'credit-agreements') { %> 
                            bg-white bg-opacity-20 text-white 
                        <% } %> 
                        hover:bg-white hover:bg-opacity-20 hover:text-white rounded transition-all ease-in-out duration-200">
                        <i class="fa-thin fa-handshake text-2xl"></i> <!-- Icon -->
                        <span class="text-lg">Credit Agreements</span> <!-- Menu Name -->
                    </a>
                </li>

                <!-- Payments Menu Item -->
                <li class="w-full mb-2">
                    <a href="/payments" class="w-full p-4 flex items-center space-x-4 text-gray-300 
                        <% if (currentPage === 'payments') { %> 
                            bg-white bg-opacity-20 text-white 
                        <% } %> 
                        hover:bg-white hover:bg-opacity-20 hover:text-white rounded transition-all ease-in-out duration-200">
                        <i class="fa-thin fa-credit-card text-2xl"></i> <!-- Icon -->
                        <span class="text-lg">Payments</span> <!-- Menu Name -->
                    </a>
                </li>

                <!-- Sales Menu Item -->
                <li class="w-full mb-2">
                    <a href="/sales" class="w-full p-4 flex items-center space-x-4 text-gray-300 
                        <% if (currentPage === 'sales') { %> 
                            bg-white bg-opacity-20 text-white 
                        <% } %> 
                        hover:bg-white hover:bg-opacity-20 hover:text-white rounded transition-all ease-in-out duration-200">
                        <i class="fa-thin fa-receipt text-2xl"></i> <!-- Icon -->
                        <span class="text-lg">Sales</span> <!-- Menu Name -->
                    </a>
                </li>

                <!-- Reports -->
                <li class="w-full mb-2">
                    <a href="/reports" class="w-full p-4 flex items-center space-x-4 text-gray-300 
                        <% if (currentPage === 'reports') { %> 
                            bg-white bg-opacity-20 text-white 
                        <% } %> 
                        hover:bg-white hover:bg-opacity-20 hover:text-white rounded transition-all ease-in-out duration-200">
                        <i class="fa-thin fa-chart-line text-2xl"></i> <!-- Icon -->
                        <span class="text-lg">Reports</span> <!-- Menu Name -->
                    </a>
                </li>
