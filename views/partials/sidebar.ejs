        </div>

        <!-- Help and Support Section -->
        <div class="mb-4">
            <h3 class="text-gray-400 text-base uppercase px-4 mb-2">Help and Support</h3>
            <ul>
                <!-- Settings Menu Item -->
                <li class="w-full mb-2">
                    <a href="/settings" class="w-full p-4 flex items-center space-x-4 text-gray-300 
                        <% if (currentPage === 'settings') { %> 
                            bg-white bg-opacity-20 text-white 
                        <% } %> 
                        hover:bg-white hover:bg-opacity-20 hover:text-white rounded transition-all ease-in-out duration-200">
